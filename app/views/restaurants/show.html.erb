<div class="card1234">
<h2><%= @restaurant.name %></h2>
<p>Address: <%= @restaurant.address%></p>
<p>Category: <%= @restaurant.category%></p>
</div>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> Rating: <%= review.rating%>/5
    <%= link_to "Remove",
      review_path(review),
     method: :delete, class: "btn btn-danger",
     data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
<%= link_to "Back to List", restaurants_path, class: "btn btn-primary" %>
